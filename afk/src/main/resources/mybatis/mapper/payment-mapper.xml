<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="paymentMapper">
 
 <insert id="insertPayment" parameterType="Payment">
 	INSERT INTO payment
 	VALUES (payment_seq.nextval, #{payment.pay_id}, #{payment.pay_name}, 
 	#{payment.pay_phone}, #{payment.pay_email}, #{payment.gui_no},
 	#{payment.guide_id}, #{payment.price}, #{payment.departure_date},
 	sysdate, 'Y'); 
 </insert>
 
 
 </mapper>
 